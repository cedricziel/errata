# -----------------------------------------------------------------------------
# Terraform Backend Configuration
# -----------------------------------------------------------------------------
# Copy this file to backend.hcl and fill in your Hetzner Object Storage details.
# Then run: terraform init -backend-config=backend.hcl
#
# To create credentials:
# 1. Go to Hetzner Cloud Console → Object Storage
# 2. Create a bucket (e.g., "errata-terraform-state")
# 3. Go to Security → S3 Credentials
# 4. Generate new credentials
# -----------------------------------------------------------------------------

# Bucket name (must be created in Hetzner Object Storage first)
bucket = "errata-terraform-state"

# S3 endpoint (use your bucket's region: fsn1, nbg1, or hel1)
endpoints = {
  s3 = "https://fsn1.your-objectstorage.com"
}

# Access credentials
access_key = "your-access-key"
secret_key = "your-secret-key"

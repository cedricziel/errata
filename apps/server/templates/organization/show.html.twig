{% extends 'layout/app.html.twig' %}

{% block title %}{{ organization.name }}{% endblock %}

{% block content %}
<div class="space-y-6">
    {# Header #}
    <div class="sm:flex sm:items-center sm:justify-between">
        <div>
            <div class="flex items-center">
                <a href="{{ path('organization_index') }}" class="text-sm text-gray-500 hover:text-gray-700">
                    Organizations
                </a>
                <svg class="mx-2 h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                <span class="text-sm text-gray-900">{{ organization.name }}</span>
            </div>
            <h1 class="mt-2 text-2xl font-bold text-gray-900">{{ organization.name }}</h1>
            <p class="mt-1 text-sm text-gray-500">
                <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium
                    {% if membership.role == 'owner' %}bg-purple-100 text-purple-800
                    {% elseif membership.role == 'admin' %}bg-blue-100 text-blue-800
                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                    {{ membership.role|capitalize }}
                </span>
            </p>
        </div>
        <div class="mt-4 sm:mt-0 flex items-center space-x-3">
            {% if membership.canManageMembers %}
                <a href="{{ path('organization_members', { publicId: organization.publicId }) }}"
                   class="inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                    <svg class="-ml-0.5 mr-1.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M7 8a3 3 0 100-6 3 3 0 000 6zM14.5 9a2.5 2.5 0 100-5 2.5 2.5 0 000 5zM1.615 16.428a1.224 1.224 0 01-.569-1.175 6.002 6.002 0 0111.908 0c.058.467-.172.92-.57 1.174A9.953 9.953 0 017 18a9.953 9.953 0 01-5.385-1.572zM14.5 16h-.106c.07-.297.088-.611.048-.933a7.47 7.47 0 00-1.588-3.755 4.502 4.502 0 015.874 2.636.818.818 0 01-.36.98A7.465 7.465 0 0114.5 16z" />
                    </svg>
                    Members
                </a>
            {% endif %}
            {% if membership.isOwner %}
                <a href="{{ path('organization_settings', { publicId: organization.publicId }) }}"
                   class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500">
                    <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M7.84 1.804A1 1 0 018.82 1h2.36a1 1 0 01.98.804l.331 1.652a6.993 6.993 0 011.929 1.115l1.598-.54a1 1 0 011.186.447l1.18 2.044a1 1 0 01-.205 1.251l-1.267 1.113a7.047 7.047 0 010 2.228l1.267 1.113a1 1 0 01.206 1.25l-1.18 2.045a1 1 0 01-1.187.447l-1.598-.54a6.993 6.993 0 01-1.929 1.115l-.33 1.652a1 1 0 01-.98.804H8.82a1 1 0 01-.98-.804l-.331-1.652a6.993 6.993 0 01-1.929-1.115l-1.598.54a1 1 0 01-1.186-.447l-1.18-2.044a1 1 0 01.205-1.251l1.267-1.114a7.05 7.05 0 010-2.227L1.821 7.773a1 1 0 01-.206-1.25l1.18-2.045a1 1 0 011.187-.447l1.598.54A6.993 6.993 0 017.51 3.456l.33-1.652zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                    </svg>
                    Settings
                </a>
            {% endif %}
        </div>
    </div>

    {# Organization Info #}
    <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <h3 class="text-base font-semibold leading-6 text-gray-900">Organization Details</h3>
            <div class="mt-4 grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
                <div>
                    <dt class="text-sm font-medium text-gray-500">Name</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ organization.name }}</dd>
                </div>
                {% if organization.slug %}
                <div>
                    <dt class="text-sm font-medium text-gray-500">Slug</dt>
                    <dd class="mt-1 text-sm text-gray-900 font-mono">{{ organization.slug }}</dd>
                </div>
                {% endif %}
                <div>
                    <dt class="text-sm font-medium text-gray-500">Created</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ organization.createdAt|date('M j, Y') }}</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Members</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ organization.memberships|length }}</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Projects</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ organization.projects|length }}</dd>
                </div>
            </div>
        </div>
    </div>

    {# Projects in this Organization #}
    {% if organization.projects|length > 0 %}
    <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <h3 class="text-base font-semibold leading-6 text-gray-900">Projects</h3>
            <div class="mt-4">
                <ul role="list" class="divide-y divide-gray-200">
                    {% for project in organization.projects %}
                    <li class="py-4">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <div class="h-10 w-10 rounded-lg bg-indigo-100 flex items-center justify-center">
                                    <svg class="h-5 w-5 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm font-medium text-gray-900">{{ project.name }}</p>
                                    {% if project.bundleIdentifier %}
                                        <p class="text-sm text-gray-500 font-mono">{{ project.bundleIdentifier }}</p>
                                    {% endif %}
                                </div>
                            </div>
                            <a href="{{ path('project_show', { publicId: project.publicId }) }}"
                               class="text-sm font-medium text-indigo-600 hover:text-indigo-500">
                                View &rarr;
                            </a>
                        </div>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}

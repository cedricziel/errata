{% extends 'layout/app.html.twig' %}

{% block title %}Organizations{% endblock %}

{% block content %}
<div class="space-y-6">
    {# Header #}
    <div class="sm:flex sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Organizations</h1>
            <p class="mt-1 text-sm text-gray-500">Manage your organization memberships</p>
        </div>
    </div>

    {# Organizations List #}
    {% if memberships|length > 0 %}
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
            {% for membership in memberships %}
                {% set org = membership.organization %}
                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <div class="h-12 w-12 rounded-lg bg-indigo-100 flex items-center justify-center">
                                    <svg class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                    </svg>
                                </div>
                            </div>
                            <div class="ml-4 flex-1">
                                <h3 class="text-lg font-medium text-gray-900">{{ org.name }}</h3>
                                <p class="text-sm text-gray-500">
                                    <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium
                                        {% if membership.role == 'owner' %}bg-purple-100 text-purple-800
                                        {% elseif membership.role == 'admin' %}bg-blue-100 text-blue-800
                                        {% else %}bg-gray-100 text-gray-800{% endif %}">
                                        {{ membership.role|capitalize }}
                                    </span>
                                </p>
                            </div>
                        </div>

                        <div class="mt-4 flex items-center text-sm text-gray-500">
                            <span>Joined {{ membership.joinedAt|date('M j, Y') }}</span>
                            <span class="mx-2">&middot;</span>
                            <span>{{ org.projects|length }} project{{ org.projects|length != 1 ? 's' : '' }}</span>
                        </div>
                    </div>

                    <div class="bg-gray-50 px-5 py-3">
                        <div class="flex items-center justify-between">
                            <a href="{{ path('organization_show', { publicId: org.publicId }) }}"
                               class="text-sm font-medium text-indigo-600 hover:text-indigo-500">
                                View details &rarr;
                            </a>
                            {% if current_organization and current_organization.id == org.id %}
                                <span class="text-sm text-green-600 font-medium">Current</span>
                            {% else %}
                                <form action="{{ path('organization_switch', { publicId: org.publicId }) }}" method="POST" class="inline">
                                    <button type="submit" class="text-sm text-gray-500 hover:text-gray-700">
                                        Switch
                                    </button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-12 bg-white rounded-lg shadow">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <h3 class="mt-2 text-sm font-semibold text-gray-900">No organizations</h3>
            <p class="mt-1 text-sm text-gray-500">You are not a member of any organization yet.</p>
        </div>
    {% endif %}
</div>
{% endblock %}

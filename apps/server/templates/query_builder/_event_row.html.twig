{# Single Event Row with Expandable Details #}
<tr class="hover:bg-gray-50 cursor-pointer event-row"
    data-action="click->results#toggleEventDetails"
    data-event-id="{{ event.event_id|default(loop.index) }}">
    <td class="px-3 py-4 whitespace-nowrap">
        <svg class="h-4 w-4 text-gray-400 transform transition-transform event-expand-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
        {% if event.timestamp %}
            {{ event.timestamp|date('Y-m-d H:i:s') }}
        {% else %}
            -
        {% endif %}
    </td>
    <td class="px-6 py-4 whitespace-nowrap">
        {% set eventType = event.event_type|default('unknown') %}
        {% set typeColors = {
            'crash': 'bg-red-100 text-red-800',
            'error': 'bg-orange-100 text-orange-800',
            'log': 'bg-blue-100 text-blue-800',
            'span': 'bg-purple-100 text-purple-800',
            'metric': 'bg-green-100 text-green-800'
        } %}
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{ typeColors[eventType]|default('bg-gray-100 text-gray-800') }}">
            {{ eventType }}
        </span>
    </td>
    <td class="px-6 py-4 whitespace-nowrap">
        {% set severity = event.severity|default('info') %}
        {% set severityColors = {
            'fatal': 'bg-red-100 text-red-800',
            'error': 'bg-orange-100 text-orange-800',
            'warning': 'bg-yellow-100 text-yellow-800',
            'info': 'bg-blue-100 text-blue-800',
            'debug': 'bg-gray-100 text-gray-800',
            'trace': 'bg-gray-100 text-gray-600'
        } %}
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{ severityColors[severity]|default('bg-gray-100 text-gray-800') }}">
            {{ severity }}
        </span>
    </td>
    <td class="px-6 py-4 text-sm text-gray-900 max-w-xs truncate" title="{{ event.message|default('') }}">
        {{ event.message|default('-')|u.truncate(60, '...') }}
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
        {{ event.device_model|default('-') }}
    </td>
</tr>
{# Expandable Details Row #}
<tr class="hidden event-details-row bg-gray-50" data-event-details="{{ event.event_id|default(loop.index) }}">
    <td colspan="6" class="px-6 py-4">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
            <div>
                <span class="font-medium text-gray-500">OS:</span>
                <span class="text-gray-900">{{ event.os_name|default('-') }} {{ event.os_version|default('') }}</span>
            </div>
            <div>
                <span class="font-medium text-gray-500">App Version:</span>
                <span class="text-gray-900">{{ event.app_version|default('-') }}</span>
            </div>
            <div>
                <span class="font-medium text-gray-500">Environment:</span>
                <span class="text-gray-900">{{ event.environment|default('-') }}</span>
            </div>
            <div>
                <span class="font-medium text-gray-500">User ID:</span>
                <span class="text-gray-900 font-mono text-xs">{{ event.user_id|default('-') }}</span>
            </div>
            {% if event.trace_id %}
            <div>
                <span class="font-medium text-gray-500">Trace ID:</span>
                <span class="text-gray-900 font-mono text-xs">{{ event.trace_id }}</span>
            </div>
            {% endif %}
            {% if event.span_id %}
            <div>
                <span class="font-medium text-gray-500">Span ID:</span>
                <span class="text-gray-900 font-mono text-xs">{{ event.span_id }}</span>
            </div>
            {% endif %}
            {% if event.operation %}
            <div>
                <span class="font-medium text-gray-500">Operation:</span>
                <span class="text-gray-900">{{ event.operation }}</span>
            </div>
            {% endif %}
            {% if event.duration_ms %}
            <div>
                <span class="font-medium text-gray-500">Duration:</span>
                <span class="text-gray-900">{{ event.duration_ms|number_format(2) }} ms</span>
            </div>
            {% endif %}
            {% if event.exception_type %}
            <div class="col-span-2">
                <span class="font-medium text-gray-500">Exception:</span>
                <span class="text-gray-900 font-mono text-xs">{{ event.exception_type }}</span>
            </div>
            {% endif %}
        </div>
        {% if event.message and event.message|length > 60 %}
        <div class="mt-3">
            <span class="font-medium text-gray-500">Full Message:</span>
            <p class="mt-1 text-gray-900 text-sm whitespace-pre-wrap font-mono bg-white p-2 rounded border">{{ event.message }}</p>
        </div>
        {% endif %}
    </td>
</tr>

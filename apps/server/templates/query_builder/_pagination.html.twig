{# Pagination Component #}
<div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200">
    <div class="flex-1 flex justify-between sm:hidden">
        {% if result.hasPreviousPage %}
        <a href="?{{ app.request.query.all|merge({page: result.page - 1})|url_encode }}"
           class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
            Previous
        </a>
        {% endif %}
        {% if result.hasNextPage %}
        <a href="?{{ app.request.query.all|merge({page: result.page + 1})|url_encode }}"
           class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
            Next
        </a>
        {% endif %}
    </div>
    <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
        <div>
            <p class="text-sm text-gray-700">
                Showing
                <span class="font-medium">{{ ((result.page - 1) * result.limit) + 1 }}</span>
                to
                <span class="font-medium">{{ min(result.page * result.limit, result.total) }}</span>
                of
                <span class="font-medium">{{ result.total|number_format }}</span>
                results
            </p>
        </div>
        <div>
            <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                {# Previous button #}
                {% if result.hasPreviousPage %}
                <a href="?{{ app.request.query.all|merge({page: result.page - 1})|url_encode }}"
                   class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50"
                   data-action="click->query-builder#goToPage"
                   data-page="{{ result.page - 1 }}">
                    <span class="sr-only">Previous</span>
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                </a>
                {% else %}
                <span class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400 cursor-not-allowed">
                    <span class="sr-only">Previous</span>
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                </span>
                {% endif %}

                {# Page numbers #}
                {% set totalPages = result.totalPages %}
                {% set currentPage = result.page %}
                {% set startPage = max(1, currentPage - 2) %}
                {% set endPage = min(totalPages, currentPage + 2) %}

                {% if startPage > 1 %}
                <a href="?{{ app.request.query.all|merge({page: 1})|url_encode }}"
                   class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50"
                   data-action="click->query-builder#goToPage"
                   data-page="1">
                    1
                </a>
                {% if startPage > 2 %}
                <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                    ...
                </span>
                {% endif %}
                {% endif %}

                {% for page in startPage..endPage %}
                {% if page == currentPage %}
                <span class="relative inline-flex items-center px-4 py-2 border border-indigo-500 bg-indigo-50 text-sm font-medium text-indigo-600">
                    {{ page }}
                </span>
                {% else %}
                <a href="?{{ app.request.query.all|merge({page: page})|url_encode }}"
                   class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50"
                   data-action="click->query-builder#goToPage"
                   data-page="{{ page }}">
                    {{ page }}
                </a>
                {% endif %}
                {% endfor %}

                {% if endPage < totalPages %}
                {% if endPage < totalPages - 1 %}
                <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                    ...
                </span>
                {% endif %}
                <a href="?{{ app.request.query.all|merge({page: totalPages})|url_encode }}"
                   class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50"
                   data-action="click->query-builder#goToPage"
                   data-page="{{ totalPages }}">
                    {{ totalPages }}
                </a>
                {% endif %}

                {# Next button #}
                {% if result.hasNextPage %}
                <a href="?{{ app.request.query.all|merge({page: result.page + 1})|url_encode }}"
                   class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50"
                   data-action="click->query-builder#goToPage"
                   data-page="{{ result.page + 1 }}">
                    <span class="sr-only">Next</span>
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                    </svg>
                </a>
                {% else %}
                <span class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400 cursor-not-allowed">
                    <span class="sr-only">Next</span>
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                    </svg>
                </span>
                {% endif %}
            </nav>
        </div>
    </div>
</div>

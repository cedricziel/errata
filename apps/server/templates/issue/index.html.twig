{% extends 'layout/app.html.twig' %}

{% block title %}Issues{% endblock %}

{% block content %}
<div class="space-y-6">
    {# Header #}
    <div class="sm:flex sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Issues</h1>
            <p class="mt-1 text-sm text-gray-500">
                {% if selectedProject %}All issues for {{ selectedProject.name }}{% else %}Select a project to view issues{% endif %}
            </p>
        </div>
        {% if projects|length > 1 %}
        <div class="mt-4 sm:mt-0">
            <select onchange="window.location.href='{{ path('issue_index') }}?project=' + this.value"
                    class="block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6">
                {% for project in projects %}
                    <option value="{{ project.publicId }}" {{ selectedProject and selectedProject.id == project.id ? 'selected' : '' }}>
                        {{ project.name }}
                    </option>
                {% endfor %}
            </select>
        </div>
        {% endif %}
    </div>

    {% if selectedProject %}
        {# Filters #}
        <div class="bg-white shadow rounded-lg p-4">
            <form method="get" class="grid grid-cols-1 gap-4 sm:grid-cols-6">
                <input type="hidden" name="project" value="{{ selectedProject.publicId }}">

                <div>
                    <label for="status" class="block text-sm font-medium text-gray-700">Status</label>
                    <select id="status" name="status"
                            class="mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                        <option value="">All</option>
                        <option value="open" {{ filters.status|default('') == 'open' ? 'selected' : '' }}>Open</option>
                        <option value="resolved" {{ filters.status|default('') == 'resolved' ? 'selected' : '' }}>Resolved</option>
                        <option value="ignored" {{ filters.status|default('') == 'ignored' ? 'selected' : '' }}>Ignored</option>
                    </select>
                </div>

                <div>
                    <label for="type" class="block text-sm font-medium text-gray-700">Type</label>
                    <select id="type" name="type"
                            class="mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                        <option value="">All</option>
                        <option value="crash" {{ filters.type|default('') == 'crash' ? 'selected' : '' }}>Crash</option>
                        <option value="error" {{ filters.type|default('') == 'error' ? 'selected' : '' }}>Error</option>
                        <option value="log" {{ filters.type|default('') == 'log' ? 'selected' : '' }}>Log</option>
                    </select>
                </div>

                <div>
                    <label for="severity" class="block text-sm font-medium text-gray-700">Severity</label>
                    <select id="severity" name="severity"
                            class="mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                        <option value="">All</option>
                        <option value="fatal" {{ filters.severity|default('') == 'fatal' ? 'selected' : '' }}>Fatal</option>
                        <option value="error" {{ filters.severity|default('') == 'error' ? 'selected' : '' }}>Error</option>
                        <option value="warning" {{ filters.severity|default('') == 'warning' ? 'selected' : '' }}>Warning</option>
                        <option value="info" {{ filters.severity|default('') == 'info' ? 'selected' : '' }}>Info</option>
                    </select>
                </div>

                <div class="sm:col-span-2">
                    <label for="search" class="block text-sm font-medium text-gray-700">Search</label>
                    <input type="text" id="search" name="search" value="{{ filters.search|default('') }}"
                           placeholder="Search issues..."
                           class="mt-1 block w-full rounded-md border-gray-300 py-2 px-3 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                </div>

                <div class="flex items-end">
                    <button type="submit"
                            class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                        Filter
                    </button>
                    {% if filters|length > 0 %}
                        <a href="{{ path('issue_index', { project: selectedProject.publicId }) }}"
                           class="ml-2 text-sm text-gray-500 hover:text-gray-700">Clear</a>
                    {% endif %}
                </div>
            </form>
        </div>

        {# Issues List #}
        <div class="bg-white shadow overflow-hidden rounded-lg">
            {% if issues|length > 0 %}
                <ul role="list" class="divide-y divide-gray-200">
                    {% for issue in issues %}
                        <li>
                            <a href="{{ path('issue_show', { publicId: issue.publicId }) }}" class="block hover:bg-gray-50">
                                <div class="px-4 py-4 sm:px-6">
                                    <div class="flex items-center justify-between">
                                        <div class="flex items-center min-w-0 flex-1">
                                            {# Status indicator #}
                                            {% if issue.status == 'open' %}
                                                <span class="flex-shrink-0 h-2 w-2 rounded-full bg-red-500"></span>
                                            {% elseif issue.status == 'resolved' %}
                                                <span class="flex-shrink-0 h-2 w-2 rounded-full bg-green-500"></span>
                                            {% else %}
                                                <span class="flex-shrink-0 h-2 w-2 rounded-full bg-gray-400"></span>
                                            {% endif %}

                                            <div class="ml-3 min-w-0 flex-1">
                                                <div class="flex items-center space-x-2">
                                                    {% if issue.type == 'crash' %}
                                                        <span class="inline-flex items-center rounded-full bg-red-100 px-2 py-0.5 text-xs font-medium text-red-800">Crash</span>
                                                    {% elseif issue.type == 'error' %}
                                                        <span class="inline-flex items-center rounded-full bg-orange-100 px-2 py-0.5 text-xs font-medium text-orange-800">Error</span>
                                                    {% else %}
                                                        <span class="inline-flex items-center rounded-full bg-blue-100 px-2 py-0.5 text-xs font-medium text-blue-800">Log</span>
                                                    {% endif %}
                                                    <p class="truncate text-sm font-medium text-indigo-600">{{ issue.title }}</p>
                                                </div>
                                                {% if issue.culprit %}
                                                    <p class="mt-1 truncate text-sm text-gray-500">{{ issue.culprit }}</p>
                                                {% endif %}
                                            </div>
                                        </div>

                                        <div class="ml-4 flex flex-shrink-0 items-center space-x-4">
                                            <div class="text-right">
                                                <p class="text-sm text-gray-900">{{ issue.occurrenceCount }} events</p>
                                                <p class="text-sm text-gray-500">{{ issue.affectedUsers }} users</p>
                                            </div>
                                            <div class="text-right text-sm text-gray-500">
                                                <p>Last seen</p>
                                                <p>{{ issue.lastSeenAt|date('M j, g:ia') }}</p>
                                            </div>
                                            <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                                            </svg>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </li>
                    {% endfor %}
                </ul>

                {# Pagination #}
                {% if issues|length == 25 %}
                    <div class="border-t border-gray-200 px-4 py-3 sm:px-6">
                        <div class="flex items-center justify-between">
                            {% if page > 1 %}
                                <a href="{{ path('issue_index', filters|merge({ project: selectedProject.publicId, page: page - 1 })) }}"
                                   class="relative inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                                    Previous
                                </a>
                            {% else %}
                                <span></span>
                            {% endif %}
                            <span class="text-sm text-gray-700">Page {{ page }}</span>
                            <a href="{{ path('issue_index', filters|merge({ project: selectedProject.publicId, page: page + 1 })) }}"
                               class="relative inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                                Next
                            </a>
                        </div>
                    </div>
                {% endif %}
            {% else %}
                <div class="text-center py-12">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <h3 class="mt-2 text-sm font-semibold text-gray-900">No issues found</h3>
                    <p class="mt-1 text-sm text-gray-500">
                        {% if filters|length > 0 %}
                            Try adjusting your filters.
                        {% else %}
                            No issues have been reported yet.
                        {% endif %}
                    </p>
                </div>
            {% endif %}
        </div>
    {% else %}
        <div class="text-center py-12">
            <p class="text-sm text-gray-500">Please select or create a project first.</p>
            <a href="{{ path('project_new') }}" class="mt-4 inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500">
                Create Project
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}

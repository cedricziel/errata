{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-full">
    {# Navigation #}
    <nav class="bg-white shadow-sm border-b border-gray-200">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="flex h-16 justify-between">
                <div class="flex">
                    <div class="flex flex-shrink-0 items-center">
                        <a href="{{ path('dashboard') }}" class="text-xl font-bold text-indigo-600">
                            üêõ Errata
                        </a>
                    </div>
                    <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                        <a href="{{ path('dashboard') }}"
                           class="{{ app.request.attributes.get('_route') == 'dashboard' ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700' }} inline-flex items-center border-b-2 px-1 pt-1 text-sm font-medium">
                            Dashboard
                        </a>
                        <a href="{{ path('issue_index') }}"
                           class="{{ app.request.attributes.get('_route') starts with 'issue_' ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700' }} inline-flex items-center border-b-2 px-1 pt-1 text-sm font-medium">
                            Issues
                        </a>
                        <a href="{{ path('project_index') }}"
                           class="{{ app.request.attributes.get('_route') starts with 'project_' ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700' }} inline-flex items-center border-b-2 px-1 pt-1 text-sm font-medium">
                            Projects
                        </a>
                    </div>
                </div>
                <div class="hidden sm:ml-6 sm:flex sm:items-center">
                    {# Organization Switcher Dropdown #}
                    {% if current_organization %}
                    <div class="relative" data-controller="dropdown">
                        <button type="button" data-action="click->dropdown#toggle" class="flex items-center space-x-2 rounded-md bg-gray-100 px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-200">
                            <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 01-1.581.814L10 13.197l-4.419 3.617A1 1 0 014 16V4zm2-1a1 1 0 00-1 1v10.566l3.419-2.8a1 1 0 011.162 0L13 14.566V4a1 1 0 00-1-1H6z" clip-rule="evenodd" />
                            </svg>
                            <span>{{ current_organization.name }}</span>
                            <svg class="h-4 w-4 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                        </button>
                        <div data-dropdown-target="menu" class="hidden absolute right-0 z-10 mt-2 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none">
                            <div class="py-1">
                                {% for org in user_organizations %}
                                    {% if org.id != current_organization.id %}
                                        <form action="{{ path('organization_switch', { publicId: org.publicId }) }}" method="POST">
                                            <button type="submit" class="block w-full px-4 py-2 text-left text-sm text-gray-700 hover:bg-gray-100">
                                                {{ org.name }}
                                            </button>
                                        </form>
                                    {% else %}
                                        <div class="px-4 py-2 text-sm text-gray-900 font-medium bg-gray-50">
                                            {{ org.name }}
                                            <span class="text-xs text-gray-500">(current)</span>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                                <div class="border-t border-gray-100"></div>
                                <a href="{{ path('organization_index') }}" class="block px-4 py-2 text-sm text-indigo-600 hover:bg-gray-100">
                                    Manage Organizations
                                </a>
                            </div>
                        </div>
                    </div>
                    {% endif %}

                    <div class="relative ml-3">
                        <div class="flex items-center space-x-4">
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('admin') }}" class="text-sm text-indigo-600 hover:text-indigo-800 font-medium">
                                    Admin
                                </a>
                            {% endif %}
                            <span class="text-sm text-gray-500">{{ app.user.email }}</span>
                            <a href="{{ path('app_logout') }}" class="text-sm text-gray-500 hover:text-gray-700">
                                Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    {# Flash Messages #}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            {% if type == 'api_key' %}
                <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-4">
                    <div class="rounded-md bg-yellow-50 p-4 border border-yellow-200">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <h3 class="text-sm font-medium text-yellow-800">API Key Created - Copy Now!</h3>
                                <div class="mt-2 text-sm text-yellow-700">
                                    <p>This is the only time you'll see this key. Copy it now:</p>
                                    <code class="mt-1 block bg-yellow-100 px-2 py-1 rounded font-mono text-xs break-all">{{ message }}</code>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% elseif type == 'success' %}
                <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-4">
                    <div class="rounded-md bg-green-50 p-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-green-800">{{ message }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% elseif type == 'error' %}
                <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-4">
                    <div class="rounded-md bg-red-50 p-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-red-800">{{ message }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    {% endfor %}

    {# Page Content #}
    <main class="py-6">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            {% block content %}{% endblock %}
        </div>
    </main>
</div>
{% endblock %}

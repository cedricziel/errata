{% extends 'layout/app.html.twig' %}

{% block title %}Logs - {{ project.name }}{% endblock %}

{% block content %}
<div class="space-y-6">
    {# Breadcrumb #}
    <nav class="flex" aria-label="Breadcrumb">
        <ol role="list" class="flex items-center space-x-4">
            <li>
                <a href="{{ path('project_index') }}" class="text-sm font-medium text-gray-500 hover:text-gray-700">Projects</a>
            </li>
            <li>
                <div class="flex items-center">
                    <svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                    </svg>
                    <a href="{{ path('project_show', { publicId: project.publicId }) }}" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700">{{ project.name }}</a>
                </div>
            </li>
            <li>
                <div class="flex items-center">
                    <svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                    </svg>
                    <span class="ml-4 text-sm font-medium text-gray-500">Logs</span>
                </div>
            </li>
        </ol>
    </nav>

    {# Header #}
    <div class="sm:flex sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Logs</h1>
            <p class="mt-1 text-sm text-gray-500">Application logs from OpenTelemetry instrumentation</p>
        </div>
        <div class="mt-4 sm:mt-0 flex space-x-2">
            <a href="{{ path('otel_traces_index', { publicId: project.publicId }) }}"
               class="inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                Traces
            </a>
            <a href="{{ path('otel_metrics_index', { publicId: project.publicId }) }}"
               class="inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                Metrics
            </a>
        </div>
    </div>

    {# Filters #}
    <div class="bg-white shadow rounded-lg p-4">
        <form method="get" class="grid grid-cols-1 gap-4 sm:grid-cols-4">
            <div>
                <label for="severity" class="block text-sm font-medium text-gray-700">Severity</label>
                <select id="severity" name="severity"
                        class="mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                    <option value="">All</option>
                    <option value="trace" {{ filters.severity|default('') == 'trace' ? 'selected' : '' }}>Trace</option>
                    <option value="debug" {{ filters.severity|default('') == 'debug' ? 'selected' : '' }}>Debug</option>
                    <option value="info" {{ filters.severity|default('') == 'info' ? 'selected' : '' }}>Info</option>
                    <option value="warning" {{ filters.severity|default('') == 'warning' ? 'selected' : '' }}>Warning</option>
                    <option value="error" {{ filters.severity|default('') == 'error' ? 'selected' : '' }}>Error</option>
                    <option value="fatal" {{ filters.severity|default('') == 'fatal' ? 'selected' : '' }}>Fatal</option>
                </select>
            </div>

            <div class="sm:col-span-2">
                <label for="search" class="block text-sm font-medium text-gray-700">Search</label>
                <input type="text" id="search" name="search" value="{{ filters.search|default('') }}"
                       placeholder="Search log messages..."
                       class="mt-1 block w-full rounded-md border-gray-300 py-2 px-3 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
            </div>

            <div class="flex items-end">
                <button type="submit"
                        class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                    Filter
                </button>
                {% if filters.severity or filters.search %}
                    <a href="{{ path('otel_logs_index', { publicId: project.publicId }) }}"
                       class="ml-2 text-sm text-gray-500 hover:text-gray-700">Clear</a>
                {% endif %}
            </div>
        </form>
    </div>

    {# Logs List #}
    <div class="bg-white shadow overflow-hidden rounded-lg">
        {% if logs|length > 0 %}
            <ul role="list" class="divide-y divide-gray-200">
                {% for log in logs %}
                    <li>
                        <a href="{{ path('otel_logs_show', { publicId: project.publicId, eventId: log.event_id }) }}" class="block hover:bg-gray-50">
                            <div class="px-4 py-4 sm:px-6">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center min-w-0 flex-1">
                                        {# Severity badge #}
                                        {% set severity = log.severity|default('info') %}
                                        {% if severity == 'fatal' or severity == 'error' %}
                                            <span class="flex-shrink-0 inline-flex items-center rounded-full bg-red-100 px-2.5 py-0.5 text-xs font-medium text-red-800">{{ severity|upper }}</span>
                                        {% elseif severity == 'warning' %}
                                            <span class="flex-shrink-0 inline-flex items-center rounded-full bg-yellow-100 px-2.5 py-0.5 text-xs font-medium text-yellow-800">{{ severity|upper }}</span>
                                        {% elseif severity == 'info' %}
                                            <span class="flex-shrink-0 inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">{{ severity|upper }}</span>
                                        {% elseif severity == 'debug' %}
                                            <span class="flex-shrink-0 inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">{{ severity|upper }}</span>
                                        {% else %}
                                            <span class="flex-shrink-0 inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-600">{{ severity|upper }}</span>
                                        {% endif %}

                                        <div class="ml-3 min-w-0 flex-1">
                                            <p class="truncate text-sm font-medium text-gray-900">{{ log.message|default('No message')|slice(0, 200) }}</p>
                                            <div class="mt-1 flex items-center space-x-4 text-xs text-gray-500">
                                                <span>{{ ((log.timestamp / 1000)|round)|date('M j, Y g:i:s A') }}</span>
                                                {% if log.trace_id %}
                                                    <a href="{{ path('otel_traces_show', { publicId: project.publicId, traceId: log.trace_id }) }}"
                                                       class="text-indigo-600 hover:text-indigo-900 font-mono"
                                                       onclick="event.stopPropagation();">
                                                        Trace: {{ log.trace_id|slice(0, 8) }}...
                                                    </a>
                                                {% endif %}
                                                {% if log.environment %}
                                                    <span>{{ log.environment }}</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="ml-4 flex flex-shrink-0 items-center">
                                        <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </li>
                {% endfor %}
            </ul>

            {# Pagination #}
            {% if logs|length == 50 %}
                <div class="border-t border-gray-200 px-4 py-3 sm:px-6">
                    <div class="flex items-center justify-between">
                        {% if page > 1 %}
                            <a href="{{ path('otel_logs_index', filters|merge({ publicId: project.publicId, page: page - 1 })) }}"
                               class="relative inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                                Previous
                            </a>
                        {% else %}
                            <span></span>
                        {% endif %}
                        <span class="text-sm text-gray-700">Page {{ page }}</span>
                        <a href="{{ path('otel_logs_index', filters|merge({ publicId: project.publicId, page: page + 1 })) }}"
                           class="relative inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                            Next
                        </a>
                    </div>
                </div>
            {% endif %}
        {% else %}
            <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <h3 class="mt-2 text-sm font-semibold text-gray-900">No logs found</h3>
                <p class="mt-1 text-sm text-gray-500">
                    {% if filters.severity or filters.search %}
                        Try adjusting your filters or timeframe.
                    {% else %}
                        No logs have been received in the selected timeframe. Try adjusting the timeframe or send some OTLP log data to get started.
                    {% endif %}
                </p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
